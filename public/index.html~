<script>
    function toggleAnswer(questionContainer) {
    const answerContainer = questionContainer.nextElementSibling;
    questionContainer.classList.toggle('open');
    answerContainer.style.display = answerContainer.style.display === 'block' ? 'none' : 'block';
    }
</script>

